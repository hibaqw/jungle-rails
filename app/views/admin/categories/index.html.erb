<section class="admin-products-index">

  <header class="page-header">
    <h1>Admin &raquo; All Category</h1>
  </header>

  <div class="well">
  
    <%= link_to '+ New Category', [:admin, :categories, :new], class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default products">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Category</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% @categories.each do |item| %>
        <%= render 'category', category: item[:name] %>
      <%end%>
      </tbody>
    </table>

  </div>

</section>

